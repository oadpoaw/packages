{
	"$schema": "https://json.schemastore.org/commitlintrc",
	"extends": [
		"@commitlint/config-angular"
	],
	"rules": {
		"type-enum": [
			2,
			"always",
			[
				"chore",
				"build",
				"ci",
				"docs",
				"feat",
				"fix",
				"perf",
				"refactor",
				"revert",
				"style",
				"test",
				"types",
				"wip"
			]
		],
		"scope-case": [
			1,
			"always",
			"camel-case"
		]
	}
}