{
  "$schema": "https://json.schemastore.org/package",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "test": "jest --collect-coverage",
    "test:ci": "jest --verbose --ci --no-stack-trace --collect-coverage",
    "format": "prettier --write \"packages/**/*.{ts,tsx}\"",
    "lint": "prettier --check \"packages/**/*.{ts,tsx}\"",
    "docs": "typedoc",
    "bump": "lerna version --conventional-commits --yes -m \"chore(release): publish\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oadpoaw/packages.git"
  },
  "author": "oadpoaw",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/oadpoaw/packages/issues"
  },
  "homepage": "https://github.com/oadpoaw/packages#readme",
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-angular": "^12.1.1",
    "@types/jest": "^26.0.23",
    "babel-jest": "^26.3.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "husky": "^6.0.0",
    "jest": "^26.4.2",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": true
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "prettier --write"
    ]
  },
  "babel": {
    "parserOpts": {
      "strictMode": true
    },
    "sourceMaps": "inline",
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "modules": "commonjs"
        }
      ],
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "babel-plugin-transform-typescript-metadata",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ]
    ]
  },
  "jest": {
    "testMatch": [
      "**/+(*.)+(spec|test).+(ts|js)?(x)"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageProvider": "v8",
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80,
        "ts-jest": {}
      }
    },
    "roots": [
      "<rootDir>packages/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "types",
          "wip"
        ]
      ],
      "scope-case": [
        1,
        "always",
        "camel-case"
      ]
    }
  },
  "name": "oadpoaw"
}
