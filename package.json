{
  "$schema": "https://json.schemastore.org/package",
  "private": true,
  "scripts": {
    "ci": "yarn install --frozen-lockfile",
    "prepare": "husky install .github/husky",
    "bootstrap": "lerna bootstrap",
    "clean": "rimraf packages/**/dist packages/**/node_modules/.cache",
    "build": "lerna run build",
    "pretest": "rimraf coverage",
    "test": "jest --config ./config/jest.config.js",
    "test:ci": "jest --verbose --ci --no-stack-trace --config ./config/jest.config.js",
    "format": "prettier --write \"packages/**/*.{ts,tsx}\"",
    "lint": "eslint packages --ext ts,tsx --fix",
    "docs": "typedoc --options ./config/typedoc.json",
    "bump": "lerna version --yes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oadpoaw/packages.git"
  },
  "author": "oadpoaw",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/oadpoaw/packages/issues"
  },
  "homepage": "https://github.com/oadpoaw/packages#readme",
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-angular": "^12.1.1",
    "@sapphire/eslint-config": "^3.1.2",
    "@sapphire/ts-config": "^2.2.1",
    "@types/jest": "^26.0.23",
    "babel-jest": "^26.3.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.4.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "typedoc": "0.22",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typescript": "^4.2.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": true
  },
  "lint-staged": {
    "*.{ts, tsx}": "eslint --fix --ext ts,tsx"
  },
  "babel": {
    "parserOpts": {
      "strictMode": true
    },
    "sourceMaps": "inline",
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "modules": "commonjs"
        }
      ],
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "babel-plugin-transform-typescript-metadata",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "module-resolver",
        {
          "alias": {
            "^@oadpoaw/(.+)": "../\\1/src"
          }
        }
      ]
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "types",
          "wip"
        ]
      ],
      "scope-case": [
        1,
        "always",
        "camel-case"
      ]
    }
  },
  "name": "oadpoaw"
}
